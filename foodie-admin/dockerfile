# Stage 1: Build the Angular app
FROM node:14 AS builder
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
# Adjust the build command if your Angular CLI version or settings differ
RUN npm run build --prod

# Stage 2: Serve the app using Nginx
FROM nginx:alpine
# Replace "your-angular-app" with your actual Angular output folder name under dist
COPY --from=builder /app/dist/your-angular-app /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]